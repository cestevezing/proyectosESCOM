<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
  <persistence-unit name="conexionSuperadministrador" transaction-type="JTA">
    <jta-data-source>jdbc/superadmin</jta-data-source>
    <class>com.mycompany.superadministrador.entity.Actividad</class>
    <class>com.mycompany.superadministrador.entity.Bitacora</class>
    <class>com.mycompany.superadministrador.entity.Configuracion</class>
    <class>com.mycompany.superadministrador.entity.Modulo</class>
    <class>com.mycompany.superadministrador.entity.TipoDocumento</class>
    <class>com.mycompany.superadministrador.entity.Usuario</class>
    <class>com.mycompany.superadministrador.entity.UsuarioActividad</class>
    <exclude-unlisted-classes>true</exclude-unlisted-classes>
    <properties>
    </properties>
  </persistence-unit>
  <persistence-unit name="documentaryUnit" transaction-type="JTA">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <jta-data-source>jdbc/dbescom</jta-data-source>
    <class>com.mycompany.modulodocumental.entity.Activity</class>
    <class>com.mycompany.modulodocumental.entity.Annex</class>
    <class>com.mycompany.modulodocumental.entity.AnnexVersion</class>
    <class>com.mycompany.modulodocumental.entity.Commentary</class>
    <class>com.mycompany.modulodocumental.entity.Condition</class>
    <class>com.mycompany.modulodocumental.entity.Document</class>
    <class>com.mycompany.modulodocumental.entity.DocumentVersion</class>
    <class>com.mycompany.modulodocumental.entity.Process</class>
    <class>com.mycompany.modulodocumental.entity.Program</class>
    <class>com.mycompany.modulodocumental.entity.UserCondition</class>
    <exclude-unlisted-classes>true</exclude-unlisted-classes>
  </persistence-unit>
</persistence>
